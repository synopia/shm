<form action="<%= geschlecht %>" method="post">
    <div id='geraetauswahl'>
        <h2>Ger√§t</h2>
        <% geraete.each_with_index do |name, index| %>
            <input type="radio" id="radio<%= index+1 %>" name="geraet" value="<%= name.downcase %>" <%= geraet==name.downcase ? 'checked' : ''%>>
            <label for="radio<%= index+1%>"><%= name %></label>
        <% end %>
  </div>

  <div id='riege_a'>
    <h2>Riege <%= riege_a %></h2>
      <% Turner.find_by_riege(riege_a).each do |turner| %>
          <input type="radio" id="radioturner<%=turner[:id]%>" name="turner" value="<%=turner[:id]%>">
          <label for="radioturner<%=turner[:id]%>"><strong><%=turner[:km] %></strong>, <%=turner[:name] %></label>
      <% end %>
  </div>


  <div id='riege3_b'>
    <h2>Riege <%= riege_b %></h2>
    <% Turner.find_by_riege(riege_b).each do |turner| %>
          <input type="radio" id="radioturner<%=turner[:id]%>" name="turner" value="<%=turner[:id]%>">
          <label for="radioturner<%=turner[:id]%>"><strong><%=turner[:km] %></strong>, <%=turner[:name] %></label>
      <% end %>
  </div>

  <div>
    <h2>Wertung</h2>
    <input id='wertung' name="wertung" type="number" min="0" max="20" step="0.05"/>
    <br>
    <input id='submitbutton' type="submit">
  </div>
</form>
